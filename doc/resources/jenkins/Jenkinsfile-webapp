node {
  stage('init') {
    checkout scm
  }

  stage('build') {
    sh '''
        mvn clean package
        mv target/todo-app-java-on-azure-1.0-SNAPSHOT.war ROOT.war
    '''
  }

  stage('deploy') {
    azureWebAppPublish azureCredentialsId: env.AZURE_CRED_ID, publishType: 'ftp',
                       resourceGroup: env.RES_GROUP, appName: env.WEB_APP, filePath: "ROOT.war",
                       targetDirectory: "webapps"

  }
}
